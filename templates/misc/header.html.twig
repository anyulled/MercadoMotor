<div class="container_12">
    <div class="pro_wrapper pro_grid-row">
        <div class="grid_6">
            <a href="{{ constant('ROOT') ~ "/index.php"}}">
                <img src="{{ constant ('ROOT') ~ constant('IMAGES')~"Logo.png"}}" alt="logo" align="middle"  height="100"/>
            </a>
        </div>
        <div class="grid_6">
        {% if (sesion.usuario|length == 0) %}
            <form id="pro_log_in" action="{{constant('ROOT') ~ "/login.php"}}" name="login" method="post" >
                <input type="usuario" placeholder="usuario" />
                <input type="password" placeholder="password"/>
                <button type="submit" class="pro_btn pro_sign-in"><span></span>Log In</button>
                <span class="pro_info"><a href="{{ constant ('ROOT') ~ "/login.php"}}">¿Deseas registrarte?</a> </span>
            </form>
        {% else %}
            <div class="container">
                <div class="grid_4">
                    <h3>Bienvenido, {{ usuario.nombre ~ " " ~ usuario.apellido|title }}</h3>
                </div>
                <div class="grid_4">
                    <p>
                        <a href="{{ constant('ROOT') ~ "/usuarios/"}}" title="Menú" class="pro_btn pro_settings"><span></span>Menú de Usuario</a>
                        <a href="{{ self }}?logout=true" class="pro_btn pro_sign-out"><span></span>Cerrar Sesión</a>
                    </p>
                </div>
            </div>
        {% endif %}
        </div>
    </div>
</div>